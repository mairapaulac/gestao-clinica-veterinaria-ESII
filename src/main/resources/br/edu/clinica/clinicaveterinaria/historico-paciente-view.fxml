<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.clinica.clinicaveterinaria.controller.HistoricoPacienteController"
      stylesheets="@css/historico-paciente.css"
      style="-fx-background-color: #f5f7fa; -fx-padding: 20;"
      spacing="15">

    <Label text="Histórico do Paciente" styleClass="title"/>

    <VBox styleClass="content-container" spacing="15">
        <!-- Informações do Paciente -->
        <VBox styleClass="patient-info-box" spacing="8">
            <HBox spacing="20">
                <VBox spacing="5">
                    <Label text="Paciente:" styleClass="info-label"/>
                    <Label fx:id="lblNomePaciente" text="" styleClass="info-value"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Espécie:" styleClass="info-label"/>
                    <Label fx:id="lblEspecie" text="" styleClass="info-value"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Raça:" styleClass="info-label"/>
                    <Label fx:id="lblRaca" text="" styleClass="info-value"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Tutor:" styleClass="info-label"/>
                    <Label fx:id="lblTutor" text="" styleClass="info-value"/>
                </VBox>
            </HBox>
        </VBox>

        <!-- Filtros e Busca -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="txtBuscar" promptText="Buscar no histórico..." styleClass="search-field"/>
            <ComboBox fx:id="comboFiltroTipo" promptText="Todos os tipos" styleClass="filter-combo"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnCadastrarPaciente" text="+ Cadastrar Paciente" styleClass="btn-cadastrar" visible="false" managed="false"/>
        </HBox>

        <!-- Tabela de Histórico -->
        <TableView fx:id="tabelaHistorico" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colData" text="Data/Hora" prefWidth="150"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                <TableColumn fx:id="colVeterinario" text="Veterinário" prefWidth="200"/>
                <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="400"/>
                <TableColumn fx:id="colAcoes" text="Ações" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>

        <!-- Estado Vazio -->
        <VBox fx:id="vboxEmptyState" alignment="CENTER" spacing="10" styleClass="empty-state" visible="false" managed="false">
            <Label text="Nenhum histórico encontrado para este paciente." styleClass="empty-state-label"/>
        </VBox>

        <!-- Botões de Ação -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="btnFechar" text="Fechar" styleClass="btn-secondary"/>
        </HBox>
    </VBox>
</VBox>


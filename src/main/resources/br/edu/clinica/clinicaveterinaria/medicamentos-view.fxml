<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.clinica.clinicaveterinaria.controller.MedicamentosController"
      stylesheets="@css/pacientes.css"
      style="-fx-background-color: #f5f7fa; -fx-padding: 20;"
      spacing="20">

    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="btnAdicionar" text="+ Adicionar Medicamento" styleClass="btn-cadastrar"/>
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            <TextField fx:id="txtBuscar" promptText="Buscar" styleClass="search-field"/>
        </HBox>
    </HBox>

    <TableView fx:id="tabelaMedicamentos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" text="Nome do Medicamento"/>
            <TableColumn fx:id="colFabricante" text="Fabricante"/>
            <TableColumn fx:id="colQuantidade" text="Quantidade"/>
            <TableColumn fx:id="colValidade" text="Data de Validade"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

</VBox>
